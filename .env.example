# 📝 环境配置文件示例
# 复制此文件为 .env 并根据需要修改配置

# ========================
# 🚀 应用配置
# ========================
NODE_ENV=development
PORT=3001

# 🔒 安全配置（生产环境必须修改！）
SESSION_SECRET=your-very-secure-session-secret-key-change-me

# 📊 数据库配置
DB_PATH=./config/images.db

# 🌐 HTTPS配置
HTTPS=false
COOKIE_SECURE=false

# 🌍 CORS配置
CORS_ORIGIN=*

# ⚡ 限流配置
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000
LOGIN_RATE_LIMIT=5

# 📝 日志配置
LOG_LEVEL=info

# ========================
# 📧 邮件服务配置（可选）
# ========================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ========================
# 📊 监控配置（可选）
# ========================
# ENABLE_MONITORING=false
